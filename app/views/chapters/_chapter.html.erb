<div id="<%= dom_id chapter %>" class="border-2 w-9/12 mx-auto flex h-40 rounded-lg shadow-lg p-2 my-5">
  <div class="w-40">
    <%= image_tag("Upload.png", class: "object-fit h-full w-full") %>
  </div>

  <div class="w-full p-5">
    <p>
      Name:
      <strong class="font-semibold">
        <%= chapter.name %>
      </strong>
    </p>

    <p>
      Description:
      <strong class="font-semibold">
        <%= chapter.description %>
      </strong>
    </p>

    <p>
      User:
      <strong class="font-semibold">
        <%= chapter.user.email %>
      </strong>
    </p>

    <div class="flex justify-end">
      <%= button_to chapter_path(chapter), method: :get do %>
        <div class="rounded-lg bg-chapterStrong px-5 py-2 text-white text-sm font-semibold">
          See more
        </div>
      <% end %>
    </div>
  </div>
</div>
