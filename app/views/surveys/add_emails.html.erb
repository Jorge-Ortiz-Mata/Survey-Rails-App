<%= render 'shared/modal', title: "Send survey." do %>
  <%= form_with(url: survey_send_survey_path(@survey), id: "send_survey_form", method: :post) do |f| %>

    <div>
        <%= f.label :send_to, "Send to:" %>
        <%= f.text_field :send_to %>
    </div>

    <div>
        <%= f.label :subject, "Subject:" %>
        <%= f.text_field :subject %>
    </div>

    <div>
        <%= f.label :message, "Message:" %>
        <%= f.text_area :message %>
    </div>

    <div class="flex py-2 justify-end gap-5">
    <span class="bg-evaluationStrong p-2 rounded-lg">
      <%= f.submit class:"text-white font-semibold" %>
    </span>
    <span class="bg-removeIcon p-2 rounded-lg">
      <%= link_to 'Cancel', :back, class:"text-white font-semibold" %>
    </span>
  </div>

  <% end %>
<% end %>
