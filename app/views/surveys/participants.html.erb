<%= turbo_frame_tag 'participants' do %>

  <div class="flex py-2 justify-end gap-5">
    <span class="bg-removeIcon p-2 rounded-lg">
      <%= link_to 'Cancel', :back, class:"text-white font-semibold" %>
    </span>
  </div>

  <div>
    <% @survey.logs.each do |log| %>
      <div class="flex flex-col border-2 my-5 p-5 shadow-lg rounded-lg">
        <p class="flex mb-2 text-sm">
          Email:
          <span class="ml-5 font-semibold text-sm">
            <%= log.email %>
          </span>
        </p>

        <p class="flex mb-2 text-sm">
          Token:
          <span class="ml-5 font-semibold text-sm">
            <%= log.token %>
          </span>
        </p>

        <p class="flex text-sm">
          Status:
            <% if log.default? %>
              <span class="ml-5 text-sm font-semibold bg-removeIcon text-white py-2 px-5 rounded-lg">
                <%= log.status.humanize %>
              </span>
            <% elsif log.sent? %>
              <span class="ml-5 text-sm font-semibold bg-chapterStrong text-white py-2 px-5 rounded-lg">
                <%= log.status.humanize %>
              </span>
            <% elsif log.process? %>
              <span class="ml-5 text-sm font-semibold bg-surveyStrong text-white py-2 px-5 rounded-lg">
                <%= log.status.humanize %>
              </span>
            <% elsif log.finish? %>
              <span class="ml-5 text-sm font-semibold bg-evaluationStrong text-white py-2 px-5 rounded-lg">
                <%= log.status.humanize %>
              </span>
            <% end %>
        </p>
      </div>
    <% end %>
  </div>
<% end%>
