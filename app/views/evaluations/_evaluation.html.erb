<div id="<%= dom_id evaluation %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= evaluation.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= evaluation.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= evaluation.type %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Body:</strong>
    <%= evaluation.body %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= evaluation.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this evaluation", evaluation, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this evaluation', edit_evaluation_path(evaluation), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
