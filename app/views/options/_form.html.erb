<div data-controller="reset">
  <%= form_for [question, option], url: question_option_create_path(question),
        html: { class: "p-5 flex flex-col", id: "question_#{question.id}_option_form" },
        data: { action: 'submit->reset#optionForm' } do |f| %>

    <h4 class="font-bold text-center mb-5">Add options</h4>

    <div class="my-2">
      <%= f.rich_text_area :name, id: "question_#{question.id}_option", class: "p-2 text-sm border-2" %>
    </div>

    <div class="my-2 flex justify-end">
      <span class="bg-evaluationStrong rounded-lg">
        <%= f.submit class:"text-sm text-white p-2 font-semibold" %>
      </span>
    </div>

  <% end %>
</div>
