<%= render 'shared/modal', title: "All sections." do %>

  <%= form_with(url: survey_save_sections_path(@survey)) do |f| %>

    <div class="flex flex-col h-96 my-5 p-5 overflow-y-auto">
      <%= collection_check_boxes(:sections, :ids, Section.all, :id, :name) do |b| %>
        <div class="flex">
          <%= b.check_box class:"hidden peer" %>
          <%= b.label class:"border-2 text-white font-semibold rounded-lg w-full my-2 peer-checked:check-user-box" do %>
            <div class="flex items-center">
              <div class="w-20">
                <%= image_tag("Upload.png", class: "object-fit h-full w-full") %>
              </div>

              <div class="flex flex-col ml-5">
                <span>
                  <%= b.object.name %>
                </span>
                <span>
                  <%= b.object.description %>
                </span>
              </div>

            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="flex py-2 justify-end gap-5">
      <span class="bg-evaluationStrong p-2 rounded-lg">
        <%= f.submit 'Add sections', class:"text-white font-semibold" %>
      </span>
      <span class="bg-removeIcon p-2 rounded-lg">
        <%= link_to 'Cancel', :back, class:"text-white font-semibold" %>
      </span>
    </div>

  <% end %>

<% end %>
