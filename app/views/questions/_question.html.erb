<%= turbo_frame_tag "edit" do %>
	<div class="my-2 flex justify-between p-3 border-2 bg-white rounded-lg">
		<div>
			<p class="text-sm">
				Name: 
				<span class="font-semibold"><%= question.name %></span>
			</p>

			<p class="text-sm">
				Question type:
				<span class="font-semibold"><%= question.question_type.humanize %></span>
			</p>
		</div>

		<div class="flex flex-col gap-3">
			<%= link_to section_question_edit_path(@evaluation, id: question.id) do %>
				<i class="fa-solid fa-pen text-editIcon"></i>
			<% end %>
			<i class="fa-solid fa-trash text-removeIcon"></i>
		</div>
	</div>
<% end %>