<div data-controller="reset" class="border-2 w-3/12 m-5 py-10 bg-footerGray rounded-lg flex items-center justify-center relative h-96">
	<%= form_for [@evaluation, @question], url: section_question_create_path(@evaluation),
					data: { action: 'submit->reset#questionForm'} do |f| %>

	<h4 class="text-2xl font-bold text-evaluationStrong text-center py-3">Create question</h4>

	<div class="flex flex-col py-3">
		<%= f.label :name, class:"text-evaluationStrong font-semibold text-center py-1" %>
		<%= f.text_field :name, class:"p-2 rounded-lg text-sm font-semibold" %>
	</div>

	<div class="flex flex-col py-3">
		<%= f.label :question_type, class:"text-evaluationStrong font-semibold text-center py-1" %>
		<%= f.select :question_type, options_for_select(Question.question_types.map {|key, value| [key.titleize, Question.question_types.key(value)]}, 
						@question.question_type)  %>
	</div>

	<div class="flex py-5 justify-center">
		<span class="bg-evaluationStrong rounded-lg">
			<%= f.submit "Create question.", class:"text-sm font-semibold p-3 text-white" %>
		</span>
	</div>
	<% end %>
</div>