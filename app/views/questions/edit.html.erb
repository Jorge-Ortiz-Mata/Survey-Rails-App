<%= turbo_frame_tag "question_#{@question.id}" do %>
	<div class="my-2 flex justify-between p-4 border-2 bg-white rounded-lg">
		<%= form_with(model: @question, url: section_question_update_path(id: @question.id), 
						class:"w-full flex flex-col justify-center items-center bg-footerGray p-5") do |f| %>

			<h4 class="text-2xl font-bold text-evaluationStrong text-center py-3">Update question</h4>

			<div class="flex py-2 gap-2">
				<%= f.label :name, class:"text-evaluationStrong font-semibold text-center py-1" %>
				<%= f.text_field :name, class:"p-2 rounded-lg text-sm font-semibold" %>
			</div>

			<div class="flex py-2 gap-2">
				<%= f.label :question_type, class:"text-evaluationStrong font-semibold text-center py-1" %>
				<%= f.select :question_type, options_for_select(Question.question_types.map {|key, value| [key.titleize, Question.question_types.key(value)]}, 
													@question.question_type), {}, {class:"w-48 p-2"}  %>
			</div>

			<div class="flex py-4 justify-center items-center gap-3">
				<span class="bg-evaluationStrong rounded-lg">
					<%= f.submit class:"text-sm font-semibold p-3 text-white" %>
				</span>
				<%= link_to :back do %>
					<span class="text-white font-semibold bg-removeIcon p-3 rounded-lg">
						Cancel
					</span>
				<% end %>
			</div>

		<% end %>
	</div>
<% end %>